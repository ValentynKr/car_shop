<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>car_shop</display-name>
    <description>car_shop</description>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <resource-ref>
        <res-ref-name>jdbc/task12</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <error-page>
        <error-code>400</error-code>
        <location>/jsp/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/jsp/login.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/jsp/accessDenied.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/jsp/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>406</error-code>
        <location>/jsp/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>408</error-code>
        <location>/jsp/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/jsp/error.jsp</location>
    </error-page>

    <context-param>
        <param-name>captchaLocation</param-name>
        <param-value>field</param-value>
    </context-param>
    <context-param>
        <param-name>captchaTimeout</param-name>
        <param-value>120000</param-value>
    </context-param>
    <context-param>
        <param-name>captchaCollectorInterval</param-name>
        <param-value>1000000</param-value>
    </context-param>
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.fallbackLocale</param-name>
        <param-value>en</param-value>
    </context-param>
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>language</param-value>
    </context-param>
    <context-param>
        <param-name>localeStorage</param-name>
        <param-value>cookie</param-value>
    </context-param>
    <context-param>
        <param-name>localeCookieLifeTime</param-name>
        <param-value>31536000</param-value>
    </context-param>

    <jsp-config>
        <taglib>
            <taglib-uri>http://localhost:8080/car_shop_war_exploded/captcha</taglib-uri>
            <taglib-location>/WEB-INF/custom/captcha.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://localhost:8080/car_shop_war_exploded/login</taglib-uri>
            <taglib-location>/WEB-INF/custom/login.tld</taglib-location>
        </taglib>
    </jsp-config>

    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>com.epam.lab.shop.filter.charset.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>LanguageFilter</filter-name>
        <filter-class>com.epam.lab.shop.filter.language.LanguageFilter</filter-class>
        <init-param>
            <param-name>availableLocales</param-name>
            <param-value>ru-RU en-US</param-value>
        </init-param>
        <init-param>
            <param-name>defaultLocale</param-name>
            <param-value>en-US</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>GzipFilter</filter-name>
        <filter-class>com.epam.lab.shop.filter.gzip.GzipFilter</filter-class>
    </filter>
    <filter>
        <filter-name>NoCacheFilter</filter-name>
        <filter-class>com.epam.lab.shop.filter.cache.CacheFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.epam.lab.shop.filter.access.SecurityFilter</filter-class>
        <init-param>
            <param-name>accessPresetFilePath</param-name>
            <param-value>/WEB-INF/access/accessPreset.xml</param-value>
        </init-param>
    </filter>


    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LanguageFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>NoCacheFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>GzipFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>